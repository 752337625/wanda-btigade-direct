{
	"name": "wanda-btigade-direct",
	"description": "旅直系统",
	"author": "万达商管集团",
	"homepage": "",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"bootstrap": "pnpm install",
		"serve": "npm run dev",
		"dev": "vite",
		"build:no-cache": "pnpm clean:cache && cross-env NODE_ENV=production npm run build",
		"build": "cross-env NODE_ENV=production vite build",
		"build:tsc": "vue-tsc --noEmit && cross-env NODE_ENV=production vite build",
		"build:test": "vite build --mode test ",
		"report": "cross-env REPORT=true npm run build",
		"type:check": "vue-tsc --noEmit --skipLibCheck",
		"preview": "npm run build && vite preview",
		"preview:dist": "vite preview",
		"clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
		"clean:lib": "rimraf node_modules",
		"reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules && npm run bootstrap",
		"lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
		"lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
		"lint:lint-staged": "lint-staged",
		"prepare": "husky install"
	},
	"dependencies": {
		"axios": "^0.26.1",
		"element-plus": "^2.2.9",
		"nprogress": "^0.2.0",
		"pinia": "2.0.12",
		"qs": "^6.10.3",
		"vue": "^3.2.37",
		"vue-router": "^4.0.14"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@types/node": "^17.0.25",
		"@types/nprogress": "^0.2.0",
		"@types/qs": "^6.9.7",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.20.0",
		"@vitejs/plugin-legacy": "^2.0.0",
		"@vitejs/plugin-vue": "^3.0.0",
		"autoprefixer": "^10.3.7",
		"cross-env": "^7.0.3",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^8.6.0",
		"esno": "^0.14.1",
		"husky": "^7.0.4",
		"less": "^4.1.2",
		"lint-staged": "12.3.7",
		"postcss": "^8.4.12",
		"postcss-html": "^1.4.1",
		"postcss-less": "^6.0.0",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.70.2",
		"rollup-plugin-visualizer": "^5.6.0",
		"sax": "^1.2.4",
		"terser": "^5.14.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4",
		"unplugin-auto-import": "^0.9.3",
		"unplugin-vue-components": "^0.21.1",
		"vite": "^3.0.0",
		"vite-plugin-banner": "^0.1.3",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-html": "^3.2.0",
		"vite-plugin-imagemin": "^0.6.1",
		"vite-plugin-mkcert": "^1.8.1",
		"vite-plugin-optimize-persist": "^0.1.2",
		"vite-plugin-package-config": "^0.1.1",
		"vite-plugin-pwa": "^0.12.3",
		"vite-plugin-restart": "^0.2.0",
		"vite-plugin-style-import": "^2.0.0",
		"vite-plugin-svg-icons": "^2.0.1",
		"vite-plugin-theme": "^0.8.6",
		"vite-plugin-vue-setup-extend": "^0.4.0",
		"vite-plugin-windicss": "^1.8.4",
		"vue-eslint-parser": "^8.3.0",
		"vue-tsc": "^0.38.4"
	},
	"lint-staged": {
		"*.{vue,js,ts,jsx,tsx}": [
			"prettier --write",
			"eslint --max-warnings 0 --fix"
		],
		"*.{scss,css,json,yaml,yml,html}": "prettier --write"
	}
}
