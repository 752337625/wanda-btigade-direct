{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"types": ["element-plus/global"],
		"skipLibCheck": true,
		"composite": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@t/*": ["types/*"],
			"@c/*": ["src/component/*"],
			"@s/*": ["src/store/*"],
			"@ac/*": ["src/assets/css/*"],
			"@cf/*": ["src/config/*"]
		}
	},
	"vueCompilerOptions": {
		"experimentalDisableTemplateSupport": true
	},
	"include": [
		"tests/**/*.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
		"types/**/*.ts",
		"build/**/*.ts",
		"build/**/*.d.ts",
		"mock/**/*.ts",
		"vite.config.ts"
	],
	"exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}
