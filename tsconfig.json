{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@t/*": ["./types/*"]
		},
		"types": ["element-plus/global"],
		"skipLibCheck": true
	},
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
